  {
    "name": "CoAnnote",
    "version": "1.0",
    "description": "This extension allows you to annotate websites and start discussion threads",
    "icons": {
      "48": "icons/popup-action-48.png"
    },
    "permissions": ["storage", "activeTab"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
      "default_icon": "icons/popup-action-48.png",
      "default_title": "CoAnnote",
      "default_popup": "popups/annotate.html"
    },
    "manifest_version": 2
  }